{
    "roots": ["./src"],
    "testMatch": ["**/__tests__/**/*.+(js|jsx|ts|tsx)", "**/?(*.)+(spec|test).+(js|jsx|ts|tsx)"],
    "testPathIgnorePatterns": ["/node_modules/"],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
        "\\.(css|less|svg)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    }
}